    <div class="container">
        <h1>Edit Review</h1>
        <form action="/submit_edit_review/{{reviewId}}" method="post">
            <label for="review_title">Review Title:</label><br>
            <input type="text" id="review_title" name="review_title" value="{{review_title}}"><br><br>
            <label for="review_desc">Review Description:</label><br>
            <textarea id="review_desc" name="review_desc">{{review_desc}}</textarea><br><br>
            <label for="rating">Rating:</label><br>
            <input type="number" id="rating" name="rating" min="1" max="5" value="{{review.rating}}"><br><br>
            <input type="submit" value="Submit Edit">
        </form>
    </div>
