<div class="edit-profile-container">
        <h2>EDIT PROFILE</h2>
        <form id="edit-profile-form" action="update_profile" method="post">
            <div class="form-group">
                <label for="profile-name">Update Profile for this email account:</label>
                <input type="text" id="user_email" name="user_email" value="{{user_email}}" readonly>
            </div>
            <div class="form-group">
                <label for="profile-name">User Name</label>
                <input type="text" id="user_name" name="user_name" placeholder="{{user_name}}">
            </div>
            <div class="form-group">
                <label for="profile-handle">Screen Name</label>
                <input type="text" id="screen_name" name="screen_name" placeholder="{{screen_name}}">
            </div>
            <div class="form-group">
                <label for="avatar">Avatar </label>
                <div class="avatar_container"> <!--Avatars-->
                    <div class="chosen_avatar"><!--Chosen avatar-->
                        Current Avatar: 
                        <img class="avatar" src="{{user_avatar}}">
                   </div>
                   <input type="hidden" id="avatar_image_input" name="avatar_image" value="">
                    <div class="avatar_list"><!--Avatar list -->
                    {{#each avatar_info}}
                    <div class="avatar_box">
                        <img class="avatar" src="{{avatar_image}}" alt="{{avatar_name}}" id="{{avatar_name}}">
                        {{avatar_name}}
                    </div>
                    {{/each}}
                    </div>
                </div>
            </div>
            <button type="submit" class="create-btn">Save Changes</button>
        </form>
    </div>
